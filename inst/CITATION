citHeader("To cite soilDB in publications use:")

bibentry(
  bibtype = "Manual",
  title = "soilDB: Soil Database Interface",
  author =  c(person(given="Dylan", family="Beaudette"),
              person(given="Jay", family="Skovlin"), 
              person(given="Stephen", family="Roecker"), 
              person(given="Andrew", family="Brown")),
  note = paste("R package version",
               ifelse(requireNamespace("soilDB", quietly=TRUE),
                      paste(packageVersion("soilDB"), collapse = "."),
                      "x.x.x")),
  url = "https://CRAN.R-project.org/package=soilDB",
  year = ifelse(requireNamespace("soilDB", quietly=TRUE),
                strftime(packageDate("soilDB"), "%Y"),
                "YYYY")
)
